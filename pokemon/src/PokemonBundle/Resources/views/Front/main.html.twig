                                <form action="" method="post" class="register-form">
                                    <input type="hidden"  value="">
                                    <div class="contact-form-row cfix">
                                        <div class="contact-form-item">
                                            <div class="contact-form-item-input form_row">
                                                <div class="form_input">
                                                    <p> Имя пользователя: </p>
                                                    <input type="text" id="username" value="" required="required" name="{{ reg_form.key }}[login]" >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="contact-form-item">
                                            <div class="contact-form-item-input form_row">
                                                <div class="form_input">
                                                    <p> E-mail </p>
                                                    <input type="email" id="email" required="required"  name="{{ reg_form.key }}[email]" >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="contact-form-item">
                                            <div class="contact-form-item-input form_row">
                                                <div class="form_input">
                                                    <p> Пароль: </p>
                                                    <input type="password" id="password" required="required" name="{{ reg_form.key }}[password]" >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="contact-form-item">
                                            <div class="contact-form-item-input form_row">
                                                <div class="form_input">
                                                    <p> Повторить пароль </p>
                                                    <input type="password" required="required" name="{{ reg_form.key }}[repassword]">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="contact-form-row-submit cfix">
                                        <div class="contact-form-item">
                                            <button class="contact-submit" id="_submit" name="_submit">
                                                <span>Регистрация</span>
                                            </button>
                                        </div>
                                    </div>
                                </form>
