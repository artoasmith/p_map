{% extends 'PokemonBundle:Front:Base.html.twig' %}

{% block content %}
    <script>
        var pokemon = [
            {% if pokemon is defined and pokemon is not empty %}
                {% for item in pokemon %}
                    {
                        id: {{ item.id }},
                        name: '{{ item.name }}',
                        image: '{{ item.image }}'
                    },
                {% endfor %}
            {% endif %}
        ];
    </script>
    <div class="sorting-wrap map-page">
            <div class="top-row">
                <div class="mbox">
                    <div class="con">
                        <div class="title">СОРТИРОВКА</div>
                        <div class="sort-navi">
                            <div class="tabs">
                                <ul class="sorting">
                                    <li>
                                        <span>A-Я</span>
                                    </li>
                                    <li>
                                        <span>Я-A</span>
                                    </li>
                                </ul>
                                <ul class="displaying">
                                    <li class="active">
                                            <span class="polos">
                                                <b></b>
                                                <b></b>
                                                <b></b>
                                            </span>
                                    </li>
                                    <li>
                                            <span class="qadri">
                                                <i></i>
                                                <i></i>
                                                <i></i>
                                                <i></i>
                                            </span>
                                    </li>
                                </ul>
                                <ul class="butt">
                                    <li onclick="$('#elementlist').toggle();">
                                            <span class="arrow">
                                                <q></q>
                                            </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bot-row list">
            <div class="items-wrap" id="elementlist" style="display: none;">
                {% if items is defined and items is not empty %}
                    {% for item in items %}
                        <div class="item">
                            <div class="num">#{{ item.pokemon }}</div>
                            <div class="look">
                                <img src="{{ item.image }}" alt="{{ item.name }}" title="{{ item.name }}">
                            </div>
                            <div class="name">{{ item.name }}</div>
                            <div class="disance"> {{ item.distance }}км </div>
                            <div class="button">
                                <a href="{{ item.id }}"> <span>ПОКАЗАТЬ</span> </a>
                            </div>
                            <!--<div class="location"> ул.Турбостроителей 5, </div>-->
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
    <div class="map">
        <div class="top-row">
            <div class="title">КАРТА</div>
        </div>
        <div class="row">
            <div id="map" class='activate' ></div>
            <div class="hide-content">
                <div class="convert">
                    <div class="topper">
                        <div class="con">
                            <img src="images/bubl.png" alt="">
                        </div>
                    </div>
                    <div class="after-all">
                        {% if user_login is defined %}
                            <div class="top-name"> {{ user_login }}</div>
                        {% else %}
                            Зарегистрируйтесь
                        {% endif %}
                        <!--
                        <div class="distance"> Растояние до покемона <span>5</span> км </div>
                        <div class="button-block">
                            <div class="butt confirm">
                                <span>Подтвердить</span>
                            </div>
                            <div class="butt not-confirm">
                                <span>Отказать</span>
                            </div>
                        </div>
                        <div class="road-is-so-far">
                            <div class="contr">
                                <span>Проложить путь</span>
                            </div>
                        </div>
                        -->
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}